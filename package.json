{
	"name": "root",
	"private": true,
	"scripts": {
		"build": "lerna run build",
		"release": "lerna run build && lerna publish --contents dist/release",
		"prettier": "prettier --write  \"packages/**/{src,tests}/**/*.{ts,tsx,md}\" --ignore-path .gitignore",
		"create": "lerna create",
		"test": "lerna run test"
	},
	"devDependencies": {
		"husky": "~0.14.3",
		"lerna": "3.13.0",
		"lint-staged": "6.0.0",
		"prettier": "1.16.4",
		"typescript": "2.6.2"
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"prettier --write",
			"git add"
		]
	},
	"prettier": {
		"singleQuote": true,
		"tabWidth": 4,
		"useTabs": true,
		"printWidth": 120,
		"arrowParens": "always"
	}
}
