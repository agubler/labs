{
	"extends": "./node_modules/@dojo/scripts/intern/base.json",

	"capabilities+": {
		"name": "@dojo-labs/resources",
		"browserstack.debug": false
	},

	"environments": [
		{ "browserName": "node" }
	],

	"node": {
		"plugins+": [
			{
				"script": "./dist/dev/tests/support/loadJsdom.js",
				"useLoader": true
			}
		]
	},

	"browser": {
		"loader": {
			"script": "./node_modules/@dojo/scripts/intern/loader.js",
			"options": {
				"packages": [
					{ "name": "src", "location": "dist/dev/src" },
					{ "name": "tests", "location": "dist/dev/tests" },
					{ "name": "whatwg-fetch", "location": "node_modules/whatwg-fetch", "main": "dist/fetch.umd.js" }
				]
			}
		},
		"plugins+": [
			{
				"script": "./dist/dev/tests/support/mockFetch.js",
				"useLoader": true
			}
		]
	}
}
